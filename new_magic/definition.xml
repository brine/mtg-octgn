    <cardaction menu="Move to Hand" shortcut="ctrl+H" execute="tohand" />
    <cardaction menu="Clear Card" shortcut="esc" execute="clear" />
    <cardaction menu="Use Activated Ability" shortcut="ctrl+Z" execute="activate" />
