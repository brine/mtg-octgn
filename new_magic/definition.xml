    <groupaction menu="Lose 1 Life" shortcut="ctrl+Q" execute="lose1Life" />
    <groupaction menu="Gain 1 Life" shortcut="ctrl+W" execute="gain1Life" />
    <groupaction menu="Re-align Cards" execute="align" />
